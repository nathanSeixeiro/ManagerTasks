{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "__test__/**/*"],
  "exclude": ["node_modules"]
}